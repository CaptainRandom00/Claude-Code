  return (
    <div className="card-dark p-6">
      <h2 className="text-lg font-semibold text-white mb-4">Projects Management</h2>
      <p className="text-slate-400">Project management features coming soon...</p>
    </div>
  );
}

function InvoicesManagement() {
  return (
    <div className="card-dark p-6">
      <h2 className="text-lg font-semibold text-white mb-4">Invoices Management</h2>
      <p className="text-slate-400">Invoice management features coming soon...</p>
    </div>
  );
}

function TicketsManagement() {
  return (
    <div className="card-dark p-6">
      <h2 className="text-lg font-semibold text-white mb-4">Support Tickets</h2>
      <p className="text-slate-400">Support ticket management features coming soon...</p>
    </div>
  );
}

function SecuritySection() {
  return (
    <div className="card-dark p-6">
      <h2 className="text-lg font-semibold text-white mb-4">Security Settings</h2>
      <p className="text-slate-400">Security management features coming soon...</p>
    </div>
  );
}

function SystemSection() {
  return (
    <div className="card-dark p-6">
      <h2 className="text-lg font-semibold text-white mb-4">System Management</h2>
      <p className="text-slate-400">System management features coming soon...</p>
    </div>
  );
}

function AdminSettings() {
  return (
    <div className="card-dark p-6">
      <h2 className="text-lg font-semibold text-white mb-4">Admin Settings</h2>
