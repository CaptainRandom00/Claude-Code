openapi: 3.1.0
info:
  title: Byte Bridges Contact API
  version: 1.0.0
  description: Contact form submission and management endpoints

servers:
  - url: http://localhost:3000
    description: Development
  - url: https://bytebridges.com
    description: Production

paths:
  /api/contact:
    post:
      summary: Submit contact form
      description: Submit multi-step contact form from potential clients
      operationId: submitContactForm
      tags:
        - Contact
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ContactFormSubmission'
      responses:
        '201':
          description: Contact form submitted successfully
          content:
            application/json:
              schema:
                type: object
                required:
                  - success
                  - message
                  - submissionId
                properties:
                  success:
                    type: boolean
                    example: true
                  message:
                    type: string
                    example: Thank you for contacting us. We will respond within 24 hours.
                  submissionId:
                    type: integer
                    example: 123
        '400':
          description: Validation error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ValidationError'
        '429':
          description: Too many submissions from this IP
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'

    get:
      summary: List contact submissions
      description: Get list of contact form submissions (admin only)
      operationId: listContactSubmissions
      tags:
        - Contact
      security:
        - sessionAuth: []
      parameters:
        - name: status
          in: query
          schema:
            type: string
            enum: [new, in-progress, contacted, qualified, converted, closed]
          description: Filter by status
        - name: page
          in: query
          schema:
            type: integer
            minimum: 1
            default: 1
        - name: limit
          in: query
          schema:
            type: integer
            minimum: 1
            maximum: 100
            default: 20
      responses:
        '200':
          description: List of contact submissions
          content:
            application/json:
              schema:
                type: object
                properties:
                  submissions:
                    type: array
                    items:
                      $ref: '#/components/schemas/ContactSubmission'
                  pagination:
                    $ref: '#/components/schemas/Pagination'
        '401':
          description: Unauthorized

  /api/contact/{id}:
    get:
      summary: Get contact submission
      description: Get details of a specific contact submission (admin only)
      operationId: getContactSubmission
      tags:
        - Contact
      security:
        - sessionAuth: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
          description: Submission ID
      responses:
        '200':
          description: Contact submission details
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ContactSubmission'
        '401':
          description: Unauthorized
        '404':
          description: Submission not found

    patch:
      summary: Update contact submission status
      description: Update status and notes for a contact submission (admin only)
      operationId: updateContactSubmission
      tags:
        - Contact
      security:
        - sessionAuth: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
          description: Submission ID
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                status:
                  type: string
                  enum: [new, in-progress, contacted, qualified, converted, closed]
                notes:
                  type: string
                  maxLength: 5000
                assignedTo:
                  type: integer
                  nullable: true
      responses:
        '200':
          description: Submission updated
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ContactSubmission'
        '400':
          description: Validation error
        '401':
          description: Unauthorized
        '404':
          description: Submission not found

    delete:
      summary: Delete contact submission
      description: GDPR right to erasure - anonymize and soft delete submission (admin only)
      operationId: deleteContactSubmission
      tags:
        - Contact
      security:
        - sessionAuth: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
          description: Submission ID
      responses:
        '204':
          description: Submission deleted (anonymized)
        '401':
          description: Unauthorized
        '404':
          description: Submission not found

components:
  schemas:
    ContactFormSubmission:
      type: object
      required:
        - name
        - email
        - serviceInterest
        - budgetRange
        - timeline
        - projectDetails
        - gdprConsent
      properties:
        name:
          type: string
          minLength: 2
          maxLength: 255
          example: John Doe
        email:
          type: string
          format: email
          example: john.doe@example.com
        company:
          type: string
          maxLength: 255
          nullable: true
          example: Acme Corporation
        serviceInterest:
          type: string
          enum:
            - custom-software
            - web-development
            - mobile-apps
            - cloud-solutions
            - ai-integration
            - consulting
          example: web-development
        budgetRange:
          type: string
          enum: ['<50k', '50k-100k', '100k-250k', '250k+']
          example: 50k-100k
        timeline:
          type: string
          enum: [urgent, 1-3-months, 3-6-months, 6+ months]
          example: 3-6-months
        projectDetails:
          type: string
          minLength: 50
          maxLength: 5000
          example: We need to build a new customer portal that integrates with our existing CRM system...
        gdprConsent:
          type: boolean
          enum: [true]
          description: Must be true - user must accept privacy policy
          example: true

    ContactSubmission:
      type: object
      required:
        - id
        - name
        - email
        - serviceInterest
        - budgetRange
        - timeline
        - projectDetails
        - gdprConsent
        - status
        - createdAt
        - retentionUntil
      properties:
        id:
          type: integer
          example: 123
        name:
          type: string
          example: John Doe
        email:
          type: string
          format: email
          example: john.doe@example.com
        company:
          type: string
          nullable: true
          example: Acme Corporation
        serviceInterest:
          type: string
          enum:
            - custom-software
            - web-development
            - mobile-apps
            - cloud-solutions
            - ai-integration
            - consulting
          example: web-development
        budgetRange:
          type: string
          enum: ['<50k', '50k-100k', '100k-250k', '250k+']
          example: 50k-100k
        timeline:
          type: string
          enum: [urgent, 1-3-months, 3-6-months, 6+ months]
          example: 3-6-months
        projectDetails:
          type: string
          example: We need to build a new customer portal...
        gdprConsent:
          type: boolean
          example: true
        ipAddress:
          type: string
          format: ipv4
          nullable: true
          example: 192.168.1.1
          description: Captured for spam/security analysis
        userAgent:
          type: string
          nullable: true
          example: Mozilla/5.0...
        status:
          type: string
          enum: [new, in-progress, contacted, qualified, converted, closed]
          example: new
        notes:
          type: string
          nullable: true
          example: Scheduled follow-up call for next Tuesday
        assignedTo:
          type: integer
          nullable: true
          example: 1
          description: Admin user ID
        createdAt:
          type: string
          format: date-time
          example: 2025-11-07T14:30:00Z
        retentionUntil:
          type: string
          format: date-time
          example: 2027-11-07T14:30:00Z
          description: Data will be deleted after this date (ICO compliance)
        contactedAt:
          type: string
          format: date-time
          nullable: true
          example: 2025-11-08T09:00:00Z
        deletedAt:
          type: string
          format: date-time
          nullable: true
          description: Set when GDPR deletion requested

    Pagination:
      type: object
      required:
        - page
        - limit
        - total
        - totalPages
      properties:
        page:
          type: integer
          minimum: 1
        limit:
          type: integer
          minimum: 1
        total:
          type: integer
          minimum: 0
        totalPages:
          type: integer
          minimum: 0

    Error:
      type: object
      required:
        - error
      properties:
        error:
          type: string
        code:
          type: string

    ValidationError:
      type: object
      required:
        - error
        - details
      properties:
        error:
          type: string
          example: Validation failed
        details:
          type: object
          additionalProperties:
            type: array
            items:
              type: string
          example:
            email: ["Valid email required"]
            projectDetails: ["Must be at least 50 characters"]
            gdprConsent: ["You must accept the privacy policy"]

  securitySchemes:
    sessionAuth:
      type: apiKey
      in: cookie
      name: next-auth.session-token
