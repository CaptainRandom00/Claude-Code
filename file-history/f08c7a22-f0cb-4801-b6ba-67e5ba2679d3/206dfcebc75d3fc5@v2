/**
 * @file ImageCarousel.tsx
 * @description Full-screen image carousel with keyboard navigation for product images
 * Feature: 025-product-image-management
 */

import React, { useState, useEffect, useCallback } from 'react';
import { ChevronLeft, ChevronRight, X, Star, Trash2, Loader2 } from 'lucide-react';
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
} from '@/components/ui/dialog';
import {
  AlertDialog,
  AlertDialogAction,
  AlertDialogCancel,
  AlertDialogContent,
  AlertDialogDescription,
  AlertDialogFooter,
  AlertDialogHeader,
  AlertDialogTitle,
} from '@/components/ui/alert-dialog';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import type { ProductImage } from '../../../../shared/types/product-images';

interface ImageCarouselProps {
  images: ProductImage[];
  initialIndex: number;
  itemCode: string;
  onClose: () => void;
  onDelete: (imageId: string) => void;
  onSetPrimary: (imageId: string) => void;
}

/**
 * ImageCarousel component for full-screen image viewing
 */
export function ImageCarousel({
  images,
  initialIndex,
  itemCode,
  onClose,
  onDelete,
  onSetPrimary,
}: ImageCarouselProps) {
  const [currentIndex, setCurrentIndex] = useState(initialIndex);
  const [showDeleteConfirm, setShowDeleteConfirm] = useState(false);
  const [isDeleting, setIsDeleting] = useState(false);

  const currentImage = images[currentIndex];
  const totalImages = images.length;

  /**
   * Navigate to previous image (with wrap-around)
   */
  const goToPrevious = useCallback(() => {
    setCurrentIndex((prev) => (prev === 0 ? totalImages - 1 : prev - 1));
  }, [totalImages]);

  /**
   * Navigate to next image (with wrap-around)
   */
  const goToNext = useCallback(() => {
    setCurrentIndex((prev) => (prev === totalImages - 1 ? 0 : prev + 1));
  }, [totalImages]);

  /**
   * Handle keyboard navigation
   */
  useEffect(() => {
    const handleKeyDown = (e: KeyboardEvent) => {
      switch (e.key) {
        case 'ArrowLeft':
          e.preventDefault();
          goToPrevious();
          break;
        case 'ArrowRight':
          e.preventDefault();
          goToNext();
          break;
        case 'Escape':
          e.preventDefault();
          onClose();
          break;
        default:
          break;
      }
    };

    window.addEventListener('keydown', handleKeyDown);
    return () => window.removeEventListener('keydown', handleKeyDown);
  }, [goToPrevious, goToNext, onClose]);

  /**
   * Handle set as primary
   */
  const handleSetPrimary = useCallback(() => {
    if (!currentImage.isPrimary) {
      onSetPrimary(currentImage.id);
    }
  }, [currentImage, onSetPrimary]);

  /**
   * Handle delete confirmation
   */
  const handleDeleteConfirm = useCallback(async () => {
    setIsDeleting(true);
    try {
      await onDelete(currentImage.id);
      setShowDeleteConfirm(false);

      // If there are remaining images, adjust index
      if (totalImages > 1) {
        if (currentIndex >= totalImages - 1) {
          setCurrentIndex(totalImages - 2);
        }
      } else {
        // No more images, close carousel
        onClose();
      }
    } catch (error) {
      console.error('Delete error:', error);
    } finally {
      setIsDeleting(false);
    }
  }, [currentImage, currentIndex, totalImages, onDelete, onClose]);

  if (!currentImage) {
    return null;
  }

  return (
    <>
      <Dialog open={true} onOpenChange={() => onClose()}>
        <DialogContent className="max-w-4xl w-full max-h-[90vh] p-0">
          <DialogHeader className="p-6 pb-0">
            <div className="flex items-center justify-between">
              <DialogTitle className="flex items-center gap-2">
                <span>Product Images</span>
                {currentImage.isPrimary && (
                  <Badge variant="secondary" className="gap-1">
                    <Star className="h-3 w-3 fill-yellow-400 text-yellow-400" />
                    Primary
                  </Badge>
                )}
              </DialogTitle>
              <Button
                variant="ghost"
                size="icon"
                onClick={onClose}
                className="h-8 w-8"
              >
                <X className="h-4 w-4" />
              </Button>
            </div>
          </DialogHeader>

          <div className="relative flex flex-col items-center justify-center p-6 pt-2">
            {/* Image counter */}
            <div className="mb-3 text-sm text-gray-500">
              Image {currentIndex + 1} of {totalImages}
            </div>

            {/* Image display */}
            <div className="relative w-full flex items-center justify-center mb-4">
              {/* Previous button */}
              {totalImages > 1 && (
                <Button
                  variant="ghost"
                  size="icon"
                  onClick={goToPrevious}
                  className="absolute left-0 z-10 h-12 w-12"
                  aria-label="Previous image"
                >
                  <ChevronLeft className="h-6 w-6" />
                </Button>
              )}

              {/* Image */}
              <div className="flex items-center justify-center max-w-[800px] max-h-[600px]">
                <img
                  src={currentImage.path}
                  alt={currentImage.originalName}
                  className="max-w-full max-h-[600px] object-contain rounded-lg"
                  style={{ maxWidth: '800px', maxHeight: '600px' }}
                />
              </div>

              {/* Next button */}
              {totalImages > 1 && (
                <Button
                  variant="ghost"
                  size="icon"
                  onClick={goToNext}
                  className="absolute right-0 z-10 h-12 w-12"
                  aria-label="Next image"
                >
                  <ChevronRight className="h-6 w-6" />
                </Button>
              )}
            </div>

            {/* Image info */}
            <div className="w-full mb-4 text-sm text-gray-600 text-center">
              <p className="font-medium">{currentImage.originalName}</p>
              <p className="text-xs">
                {currentImage.width} × {currentImage.height} • {(currentImage.size / 1024).toFixed(0)} KB
              </p>
            </div>

            {/* Action buttons */}
            <div className="flex gap-2">
              <Button
                variant="outline"
                size="sm"
                onClick={handleSetPrimary}
                disabled={currentImage.isPrimary}
                className="gap-2"
              >
                <Star className={currentImage.isPrimary ? 'h-4 w-4 fill-yellow-400 text-yellow-400' : 'h-4 w-4'} />
                {currentImage.isPrimary ? 'Primary Image' : 'Set as Primary'}
              </Button>

              <Button
                variant="destructive"
                size="sm"
                onClick={() => setShowDeleteConfirm(true)}
                className="gap-2"
              >
                <Trash2 className="h-4 w-4" />
                Delete
              </Button>
            </div>

            {/* Keyboard hints */}
            <div className="mt-4 text-xs text-gray-400 text-center">
              Use ← → arrow keys to navigate • ESC to close
            </div>
          </div>
        </DialogContent>
      </Dialog>

      {/* Delete confirmation dialog */}
      <AlertDialog open={showDeleteConfirm} onOpenChange={setShowDeleteConfirm}>
        <AlertDialogContent>
          <AlertDialogHeader>
            <AlertDialogTitle>Delete Image?</AlertDialogTitle>
            <AlertDialogDescription>
              Are you sure you want to delete "{currentImage.originalName}"?
              This action cannot be undone.
              {currentImage.isPrimary && totalImages > 1 && (
                <span className="block mt-2 text-yellow-600 font-medium">
                  Note: This is the primary image. The first remaining image will become the new primary.
                </span>
              )}
            </AlertDialogDescription>
          </AlertDialogHeader>
          <AlertDialogFooter>
            <AlertDialogCancel disabled={isDeleting}>Cancel</AlertDialogCancel>
            <AlertDialogAction
              onClick={handleDeleteConfirm}
              disabled={isDeleting}
              className="bg-red-600 hover:bg-red-700"
            >
              {isDeleting ? (
                <>
                  <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                  Deleting...
                </>
              ) : (
                'Delete'
              )}
            </AlertDialogAction>
          </AlertDialogFooter>
        </AlertDialogContent>
      </AlertDialog>
    </>
  );
}
