/**
 * Widget Error Component
 * Feature: 028-build-a-widget
 *
 * Displays error state with retry button (per spec.md edge case)
 */

import React from 'react';
import { Button } from '@/components/ui/button';
import { AlertCircle, RefreshCw } from 'lucide-react';

interface WidgetErrorProps {
  error: string;
  lastFetched?: Date | null;
  onRetry?: () => void;
}

export function WidgetError({ error, lastFetched, onRetry }: WidgetErrorProps) {
  return (
    <div
      data-testid="widget-error"
      className="flex flex-col items-center justify-center h-full min-h-[200px] text-center p-6"
    >
      <AlertCircle className="h-12 w-12 text-destructive mb-4" />

      <h4 className="text-sm font-semibold text-foreground mb-2">
        Failed to load widget data
      </h4>

      <p className="text-sm text-muted-foreground mb-4 max-w-md">
        {error}
      </p>

      {lastFetched && (
        <p className="text-xs text-muted-foreground mb-4">
          Last successful update: {new Date(lastFetched).toLocaleTimeString()}
        </p>
      )}

      {onRetry && (
        <Button
          variant="outline"
          size="sm"
          onClick={onRetry}
          className="gap-2"
        >
          <RefreshCw className="h-4 w-4" />
          Retry
        </Button>
      )}
    </div>
  );
}
