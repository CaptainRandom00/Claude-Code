/**
 * Template Gallery Page
 * Feature: 028-build-a-widget (User Story 2)
 *
 * Displays available dashboard templates and allows users to create
 * dashboards from templates.
 */

import { useQuery, useMutation } from '@tanstack/react-query';
import { useLocation } from 'wouter';
import { useState } from 'react';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogFooter,
  DialogHeader,
  DialogTitle,
} from '@/components/ui/dialog';
import { Loader2, Plus, LayoutDashboard } from 'lucide-react';
import type { DashboardTemplate } from '@shared/schema';

interface TemplateWithPreview extends DashboardTemplate {
  widgets?: any[];
}

export default function TemplateGallery() {
  const [, setLocation] = useLocation();
  const [selectedTemplate, setSelectedTemplate] = useState<TemplateWithPreview | null>(null);
  const [customName, setCustomName] = useState('');
  const [showDialog, setShowDialog] = useState(false);

  // Fetch templates
  const { data: templates, isLoading, error } = useQuery<TemplateWithPreview[]>({
    queryKey: ['dashboard-templates'],
    queryFn: async () => {
      const response = await fetch('/api/widgets/templates');
      if (!response.ok) {
        throw new Error('Failed to fetch templates');
      }
      return response.json();
    },
  });

  // Create dashboard from template mutation
  const createDashboard = useMutation({
    mutationFn: async (params: { templateId: number; name?: string }) => {
      const response = await fetch(`/api/widgets/dashboards/from-template/${params.templateId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ name: params.name }),
      });

      if (!response.ok) {
        throw new Error('Failed to create dashboard from template');
      }

      return response.json();
    },
    onSuccess: (data) => {
      // Redirect to the newly created dashboard
      const dashboardId = data.id || data.dashboard?.id;
      if (dashboardId) {
        setLocation(`/dashboards/${dashboardId}`);
      }
    },
  });

  const handleTemplateSelect = (template: TemplateWithPreview) => {
    setSelectedTemplate(template);
    setCustomName(`${template.name} - ${new Date().toLocaleDateString()}`);
    setShowDialog(true);
  };

  const handleCreateDashboard = () => {
    if (selectedTemplate) {
      createDashboard.mutate({
        templateId: selectedTemplate.id,
        name: customName || undefined,
      });
      setShowDialog(false);
    }
  };

  if (isLoading) {
    return (
      <div className="flex items-center justify-center h-screen">
        <Loader2 className="h-8 w-8 animate-spin text-muted-foreground" />
      </div>
    );
  }

  if (error) {
    return (
      <div className="flex items-center justify-center h-screen">
        <div className="text-center">
          <p className="text-lg font-semibold text-destructive" data-testid="error-message">
            Failed to load templates
          </p>
          <p className="text-sm text-muted-foreground mt-2">
            {error instanceof Error ? error.message : 'Unknown error'}
          </p>
        </div>
      </div>
    );
  }

  return (
    <div className="container mx-auto py-8 px-4">
      {/* Header */}
      <div className="mb-8">
        <h1 className="text-3xl font-bold mb-2">Dashboard Templates</h1>
        <p className="text-muted-foreground">
          Choose a pre-built dashboard template to get started quickly
        </p>
      </div>

      {/* Creating dashboard loader */}
      {createDashboard.isPending && (
        <div
          className="fixed inset-0 bg-background/80 backdrop-blur-sm z-50 flex items-center justify-center"
          data-testid="creating-dashboard-loader"
        >
          <div className="flex flex-col items-center gap-4">
            <Loader2 className="h-12 w-12 animate-spin text-primary" />
            <p className="text-lg font-medium">Creating your dashboard...</p>
          </div>
        </div>
      )}

      {/* Template Gallery */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-testid="template-gallery">
        {templates?.map((template) => (
          <Card
            key={template.id}
            className="cursor-pointer hover:shadow-lg transition-shadow"
            data-testid={`template-card-${template.name.toLowerCase().replace(/\s+/g, '-')}`}
            onClick={() => handleTemplateSelect(template)}
          >
            <CardHeader>
              {/* Preview Image */}
              {template.previewImageUrl ? (
                <div
                  className="w-full h-48 bg-muted rounded-md mb-4 bg-cover bg-center"
                  style={{ backgroundImage: `url(${template.previewImageUrl})` }}
                  data-testid="template-preview"
                />
              ) : (
                <div
                  className="w-full h-48 bg-muted rounded-md mb-4 flex items-center justify-center"
                  data-testid="template-preview"
                >
                  <LayoutDashboard className="h-16 w-16 text-muted-foreground/50" />
                </div>
              )}

              <CardTitle data-testid="template-name">{template.name}</CardTitle>
              <CardDescription data-testid="template-description">
                {template.description}
              </CardDescription>
            </CardHeader>

            <CardContent>
              <div className="flex items-center justify-between">
                <span className="text-sm text-muted-foreground capitalize">
                  {template.category}
                </span>
                <Button size="sm" onClick={() => handleTemplateSelect(template)}>
                  <Plus className="h-4 w-4 mr-1" />
                  Use Template
                </Button>
              </div>
            </CardContent>
          </Card>
        ))}
      </div>

      {/* Create Dashboard Dialog */}
      <Dialog open={showDialog} onOpenChange={setShowDialog}>
        <DialogContent data-testid="save-dashboard-dialog">
          <DialogHeader>
            <DialogTitle>Create Dashboard from Template</DialogTitle>
            <DialogDescription>
              {selectedTemplate?.name && `Creating dashboard from "${selectedTemplate.name}"`}
            </DialogDescription>
          </DialogHeader>

          <div className="space-y-4 py-4">
            <div className="space-y-2">
              <Label htmlFor="dashboard-name">Dashboard Name</Label>
              <Input
                id="dashboard-name"
                data-testid="dashboard-name-input"
                value={customName}
                onChange={(e) => setCustomName(e.target.value)}
                placeholder="Enter dashboard name"
              />
            </div>
          </div>

          <DialogFooter>
            <Button variant="outline" onClick={() => setShowDialog(false)}>
              Cancel
            </Button>
            <Button
              onClick={handleCreateDashboard}
              disabled={createDashboard.isPending}
              data-testid="confirm-save-button"
            >
              {createDashboard.isPending ? (
                <>
                  <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                  Creating...
                </>
              ) : (
                <>
                  <Plus className="mr-2 h-4 w-4" />
                  Create Dashboard
                </>
              )}
            </Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>
    </div>
  );
}
