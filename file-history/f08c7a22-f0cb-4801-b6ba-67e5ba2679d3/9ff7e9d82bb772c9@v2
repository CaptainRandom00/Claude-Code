import { Switch, Route } from "wouter";
import { queryClient } from "./lib/queryClient";
import { QueryClientProvider } from "@tanstack/react-query";
import { Toaster } from "@/components/ui/toaster";
import { TooltipProvider } from "@/components/ui/tooltip";
import { AuthProvider } from "@/hooks/use-auth";
import { ThemeProvider } from "@/contexts/theme-context";
import { SupplierFilterProvider } from "@/contexts/supplier-filter-context";
import { ErrorProvider } from "@/contexts/error-context";
import ErrorBoundary from "@/components/error-boundary";
import Dashboard from "@/pages/dashboard";
import DashboardViewer from "@/pages/DashboardViewer";
import DashboardBuilder from "@/pages/DashboardBuilder";
import TemplateGallery from "@/pages/TemplateGallery";
import AuthPage from "@/pages/auth-page";
import NotFound from "@/pages/not-found";
import { ProtectedRoute } from "./lib/protected-route";
import { DevToolsContainer } from "@/dev-tools";
import { initializeSafariSupport, checkSafariCompatibility } from "@/utils/safari-compatibility";
import { FallbackLayout } from "@/components/ui/fallback-layouts";
import { WidgetDashboardLayout } from "@/components/layouts/WidgetDashboardLayout";
import { useEffect, useState } from "react";

function Router() {
  return (
    <ErrorBoundary componentName="Router">
      <Switch>
        <Route
          path="/"
          component={() => (
            <ErrorBoundary componentName="Dashboard">
              <Dashboard />
            </ErrorBoundary>
          )}
        />
        <Route
          path="/dashboard"
          component={() => (
            <ErrorBoundary componentName="Dashboard">
              <Dashboard />
            </ErrorBoundary>
          )}
        />
        <Route
          path="/dashboards/templates"
          component={() => (
            <ErrorBoundary componentName="TemplateGallery">
              <WidgetDashboardLayout>
                <TemplateGallery />
              </WidgetDashboardLayout>
            </ErrorBoundary>
          )}
        />
        <Route
          path="/dashboards/builder/:id?/configure/:widgetType?"
          component={() => (
            <ErrorBoundary componentName="DashboardBuilder">
              <WidgetDashboardLayout>
                <DashboardBuilder />
              </WidgetDashboardLayout>
            </ErrorBoundary>
          )}
        />
        <Route
          path="/dashboards/builder/:id?"
          component={() => (
            <ErrorBoundary componentName="DashboardBuilder">
              <WidgetDashboardLayout>
                <DashboardBuilder />
              </WidgetDashboardLayout>
            </ErrorBoundary>
          )}
        />
        <Route
          path="/dashboards/:id"
          component={() => (
            <ErrorBoundary componentName="DashboardViewer">
              <WidgetDashboardLayout>
                <DashboardViewer />
              </WidgetDashboardLayout>
            </ErrorBoundary>
          )}
        />
        <Route
          path="/auth"
          component={() => (
            <ErrorBoundary componentName="AuthPage">
              <AuthPage />
            </ErrorBoundary>
          )}
        />
        <Route
          component={() => (
            <ErrorBoundary componentName="NotFound">
              <NotFound />
            </ErrorBoundary>
          )}
        />
      </Switch>
    </ErrorBoundary>
  );
}

function AppContent() {
  const [compatibilityCheck, setCompatibilityCheck] = useState<any>(null);
  const [isInitializing, setIsInitializing] = useState(true);

  useEffect(() => {
    // Initialize Safari support and compatibility checks
    const initializeApp = async () => {
      try {
        // Add small delay to ensure DOM is ready
        await new Promise(resolve => setTimeout(resolve, 100));

        const safariCheck = initializeSafariSupport();
        setCompatibilityCheck(safariCheck);

        // Additional app initialization can go here
        await new Promise(resolve => setTimeout(resolve, 200));

      } catch (error) {
        console.error('App initialization error:', error);
        setCompatibilityCheck({
          isSafari: false,
          issues: ['App initialization failed'],
          isSecureContext: window.isSecureContext
        });
      } finally {
        setIsInitializing(false);
      }
    };

    initializeApp();
  }, []);

  // Show loading state during initialization
  if (isInitializing) {
    return (
      <div className="min-h-screen bg-background flex items-center justify-center">
        <div className="space-y-4 text-center">
          <div className="loading-spinner w-8 h-8 mx-auto border-2 border-muted border-t-primary" />
          <p className="font-mono text-xs text-muted-foreground uppercase tracking-wide animate-pulse">
            Initializing System...
          </p>
        </div>
      </div>
    );
  }

  // Check for critical compatibility issues
  if (compatibilityCheck?.issues?.length > 0) {
    const hasCriticalIssues = compatibilityCheck.issues.some((issue: string) =>
      issue.includes('HTTPS required') ||
      issue.includes('not supported') ||
      issue.includes('initialization failed')
    );

    if (hasCriticalIssues) {
      return (
        <FallbackLayout
          type="browser"
          title="Browser Compatibility Issue"
          message={compatibilityCheck.issues[0]}
          onReload={() => window.location.reload()}
          showTroubleshooting={true}
        />
      );
    }
  }

  return (
    <ErrorProvider>
      <QueryClientProvider client={queryClient}>
        <TooltipProvider>
          <ThemeProvider>
            <AuthProvider>
              <SupplierFilterProvider>
                <DevToolsContainer>
                  <Toaster />
                  <Router />
                </DevToolsContainer>
              </SupplierFilterProvider>
            </AuthProvider>
          </ThemeProvider>
        </TooltipProvider>
      </QueryClientProvider>
    </ErrorProvider>
  );
}

function App() {
  return (
    <ErrorBoundary
      fallback={
        <FallbackLayout
          type="generic"
          title="Application Error"
          message="The application failed to start. Please refresh the page or try again later."
          onReload={() => window.location.reload()}
          showTroubleshooting={true}
        />
      }
    >
      <AppContent />
    </ErrorBoundary>
  );
}

export default App;
